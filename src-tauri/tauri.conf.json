{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "gu-gpa-calculator",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "readFile": true,
        "writeFile": true,
        "createDir": true,
        "exists": true,
        "scope": ["$APPDATA/*","$APPDATA/GPA_Calculator/*","$APPDATA/Roaming/com.tauri.dev/**"]
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "gu-gpa-calculator",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "lol.niox.gpa-calculator",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon48.ico",
        "icons/icon32.ico",
        "icons/icon.ico"
      ]
    }
  }
}
